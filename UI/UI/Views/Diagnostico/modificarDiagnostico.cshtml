@model UI.Models.Diagnostico

@{
    Layout = "~/Views/Shared/_LayoutObtener.cshtml";
}

<main>
    <section class="container px-lg-5">
        <div class="row justify-content-center">
            <div class="col-lg-4">
                <div class="card mt-3 mb-3 cardWrapper">
                    <div class="card-body">
                        <div class="row">
                            <div class="col text-center">
                                <img src="~/assets/analysis.png"
                                     class="img-fluid rounded-top customImg"
                                     alt="" />
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col mb-2 text-center">
                                <h3 class="cardTitle">Modificar Diagnóstico</h3>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-auto">
                                @using (Html.BeginForm("accionesEjecucion", "Diagnostico", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.TN_IdDiagnostico)

                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.TN_IdCita, "Cita", htmlAttributes: new { @class = "form-label lblCustom" })
                                        <div>
                                            @Html.DropDownListFor(model => model.TN_IdCita, new SelectList(Model.Citas, "Value", "Text"), "Seleccione una cita", new { @class = "form-control inpCustom py-lg-2 w-100" })
                                            @Html.ValidationMessageFor(model => model.TN_IdCita, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.TC_DscDiagnostico, htmlAttributes: new { @class = "form-label lblCustom" })
                                        <div>
                                            @Html.TextAreaFor(model => model.TC_DscDiagnostico, new { @class = "form-control inpCustom", rows = 10, cols = 50 })
                                            @Html.ValidationMessageFor(model => model.TC_DscDiagnostico, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="text-center">
                                            <button type="submit"
                                                    name="accionEjecutar"
                                                    value="Modificar"
                                                    class="btn btn-primary w-75 btnAgregar"
                                                    formaction="@Url.Action("accionesEjecucion", "Diagnostico")">
                                                Modificar
                                            </button>
                                        </div>
                                    </div>
                                }
                                <div class="mb-3">
                                    <div class="text-center">
                                        <a href="@Url.Action("obtenerDiagnosticos")"
                                           class="btn btn-primary w-50 btnCancelar">Cancelar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>