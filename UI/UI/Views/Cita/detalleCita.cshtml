@model UI.Models.Cita

@{ Layout = "~/Views/Shared/_LayoutObtener.cshtml"; }

<main>
    <section class="container px-lg-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card mt-3 mb-3 cardWrapper">
                    <div class="card-body">
                        <div class="row">
                            <div class="col text-center">
                                <img src="/assets/user.png" class="img-fluid rounded-top customImg" alt="" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col mb-2 text-center">
                                <h3 class="cardTitle">Detalles de la Cita</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <dl>
                                    <dt class="form-label lblCustom">Cita:</dt>
                                    <dd>@Model.TN_IdCita</dd>

                                    <dt class="form-label lblCustom">Cliente:</dt>
                                    <dd>
                                        @{
                                            var cliente = ViewBag.Clientes as IEnumerable<UI.Models.Clientes>;
                                            if (cliente != null)
                                            {
                                                var clienteSeleccionado = cliente.FirstOrDefault(c => c.TN_IdCliente == Model.TN_IdCliente);
                                                if (clienteSeleccionado != null)
                                                {
                                                    @clienteSeleccionado.TC_Nombre
                                                }
                                                else
                                                {
                                                    <text>No se encontró el cliente</text>
                                                }
                                            }
                                            else
                                            {
                                                <text>ViewBag.Clientes is null</text>
                                            }
                                        }
                                    </dd>

                                    <dt class="form-label lblCustom">Mascota:</dt>
                                    <dd>
                                        @{
                                            var mascota = ViewBag.Mascotas as IEnumerable<UI.Models.Mascotas>;
                                            if (mascota != null)
                                            {
                                                var mascotaSeleccionado = mascota.FirstOrDefault(c => c.TN_IdMascota == Model.TN_IdMascota);
                                                if (mascotaSeleccionado != null)
                                                {
                                                    @mascotaSeleccionado.TC_NombreMascota
                                                }
                                                else
                                                {
                                                    <text>No se encontró la mascota</text>
                                                }
                                            }
                                            else
                                            {
                                                <text>ViewBag.Mascotas is null</text>
                                            }
                                        }
                                    </dd>

                                    <dt class="form-label lblCustom">Fecha:</dt>
                                    <dd>@Model.TF_FecCita</dd>
                                </dl>

                                <div class="mb-3">
                                    <div class="text-center">
                                        <a href="@Url.Action("modificarCitas", new { pIdCita = Model.TN_IdCita })" class="btn btn-primary w-75 btnAgregar">Editar</a>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="text-center">
                                        <a href="@Url.Action("obtenerCitas")" class="btn btn-primary w-50 btnCancelar">Regresar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>