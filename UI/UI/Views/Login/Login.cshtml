@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<div class="container">
    @using (Html.BeginForm("Acceder", "Login", FormMethod.Post))
    {
        <div class="row">
            <div class="col-4 mx-auto">
                <div class="card mt-5 cardWrapper">
                    <div class="row">
                        <div class="col">
                            <div class="card-body">
                                <h1 class="text-center cardTitle">Inicio de Sesión</h1>
                                <hr />
                                <div class="row justify-content-center">

                                    <div class="col-6 ">
                                        <div class="mb-3 ">
                                            <label class="form-label lblCustom">Usuario</label>
                                            @Html.TextBox("usuario", null, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label lblCustom">Contraseña</label>
                                            @Html.Password("password", null, new { @class = "form-control" })
                                        </div>
                                        <div class="mb-4 text-center">
                                            <input type="submit" class="btn btn-primary btnAgregar w-75" value="Iniciar" />
                                        </div>
                                    </div>

                                    <hr />
                                    <p class="text-center fw-bold">
                                        Sistema de Gestión de Veterinarias © 2024
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (ViewBag.Respuesta != null && !ViewBag.Respuesta)
{
    <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="errorModalLabel">Error de autenticación</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Usuario o contraseña incorrectos.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.Respuesta != null && !ViewBag.Respuesta)
{
    <script>
        $(document).ready(function () {
            $('#errorModal').modal('show');
        });
    </script>
}

@if (ViewBag.Route != null)
{
    <script>
        window.location.href = "@ViewBag.Route";
    </script>
}

<script>
    $(document).ready(function () {
        $('#errorModal').modal('show');

        $('#errorModal').on('hidden.bs.modal', function () {
            // This function will be called when the modal is closed
            // You can perform additional actions here if needed
        });

        $('#errorModal .btn-secondary').click(function () {
            $('#errorModal').modal('hide');
        });
    });
</script>
