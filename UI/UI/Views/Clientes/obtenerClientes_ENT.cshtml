@model IEnumerable<UI.Models.Clientes>

@{
    Layout = "~/Views/Shared/_LayoutObtener.cshtml";
}

<main>
    <section class="container px-lg-5 ">
        <div class="card cardContainer mt-3 mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col text-center">
                        <img src="/assets/user.png" class="img-fluid rounded-top" alt="" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col text-center">
                        <h4 class="txtTitle">Lista de Clientes</h4>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col text-center">
                        @Html.ActionLink("Nuevo", "agregarCliente_ENT", null, new { @class = "btn btn-primary w-50 btnNuevo" })
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <table class="table table-striped mt-4 tblClientes text-center">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.TN_IdCliente)</th>
                                    <th>@Html.DisplayNameFor(model => model.TC_Nombre)</th>
                                    <th>@Html.DisplayNameFor(model => model.TC_Ap1)</th>
                                    <th>@Html.DisplayNameFor(model => model.TC_Ap2)</th>
                                    <th>@Html.DisplayNameFor(model => model.TC_NumTelefono)</th>
                                    <th>@Html.DisplayNameFor(model => model.TC_CorreoElectronico)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.TN_IdCliente)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TC_Nombre)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TC_Ap1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TC_Ap2)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TC_NumTelefono)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TC_CorreoElectronico)</td>
                                        <td>
                                            <div class="row mb-2">
                                                <div class="col">
                                                    <div class="d-grid gap-2">
                                                        @Html.ActionLink("Editar", "modificarCliente_ENT", new { pIdCliente = item.TN_IdCliente }, new { @class = "btn btn-primary btnEditar" })
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-2">
                                                <div class="col">
                                                    @Html.ActionLink("Detalles", "detalleCliente_ENT", new { pIdCliente = item.TN_IdCliente }, new { @class = "btn btn-primary btnDetalles" })
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    @Html.ActionLink("Eliminar", "eliminarCliente_ENT", new { pIdCliente = item.TN_IdCliente }, new { @class = "btn btn-primary btnEliminar" })
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>