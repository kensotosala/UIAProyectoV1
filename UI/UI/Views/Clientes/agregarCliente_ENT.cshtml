@model UI.Models.Clientes

@{
    Layout = "~/Views/Shared/_LayoutObtener.cshtml";
}

<main>
    <section class="container px-lg-5">
        <div class="row justify-content-center">
            <div class="col-lg-4">
                <div class="card mt-3 mb-3 cardWrapper">
                    <div class="card-body">
                        <div class="row">
                            <div class="col text-center">
                                <img src="/assets/user.png"
                                     class="img-fluid rounded-top customImg"
                                     alt="" />
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col mb-2 text-center">
                                <h3 class="cardTitle">Agregar Nuevo Cliente</h3>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-lg-auto">
                                @using (Html.BeginForm("accionesEjecucion", "Clientes", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="mb-3">
                                        <div>
                                        @Html.LabelFor(model => model.TC_Nombre, htmlAttributes: new { @class = "form-label lblCustom" })
                                        </div>
                                        <div >
                                            @Html.EditorFor(model => model.TC_Nombre, new { htmlAttributes = new { @class = "form-control inpCustom" } })
                                            @Html.ValidationMessageFor(model => model.TC_Nombre, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.TC_Ap1, htmlAttributes: new { @class = "form-label lblCustom" })
                                        <div>
                                            @Html.EditorFor(model => model.TC_Ap1, new { htmlAttributes = new { @class = "form-control inpCustom" } })
                                            @Html.ValidationMessageFor(model => model.TC_Ap1, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.TC_Ap2, htmlAttributes: new { @class = "form-label lblCustom" })
                                        <div>
                                            @Html.EditorFor(model => model.TC_Ap2, new { htmlAttributes = new { @class = "form-control inpCustom" } })
                                            @Html.ValidationMessageFor(model => model.TC_Ap2, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.TC_NumTelefono, htmlAttributes: new { @class = "form-label lblCustom" })
                                        <div>
                                            @Html.EditorFor(model => model.TC_NumTelefono, new { htmlAttributes = new { @class = "form-control inpCustom" } })
                                            @Html.ValidationMessageFor(model => model.TC_NumTelefono, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.TC_CorreoElectronico, htmlAttributes: new { @class = "form-label lblCustom" })
                                        <div>
                                            @Html.EditorFor(model => model.TC_CorreoElectronico, new { htmlAttributes = new { @class = "form-control inpCustom" } })
                                            @Html.ValidationMessageFor(model => model.TC_CorreoElectronico, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="text-center">
                                            <button type="submit"
                                                    name="accionEjecutar"
                                                    value="Agregar"
                                                    class="btn btn-primary w-75 btnAgregar"
                                                    formaction="@Url.Action("accionesEjecucion", "Clientes")">
                                                Agregar
                                            </button>
                                        </div>
                                    </div>
                                }
                                <div class="mb-3">
                                    <div class="text-center">
                                        <a href="@Url.Action("obtenerCliente_ENT")"
                                           class="btn btn-primary w-50 btnCancelar">Cancelar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>