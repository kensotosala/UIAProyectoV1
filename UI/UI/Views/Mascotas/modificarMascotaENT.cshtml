@model UI.Models.Mascotas

@{ Layout = "~/Views/Shared/_LayoutObtener.cshtml"; }

<main>
    <section class="container px-lg-5">
        <div class="row justify-content-center">
            <div class="col-lg-4">
                <div class="card mt-3 mb-3 cardWrapper">
                    <div class="card-body">
                        <div class="row">
                            <div class="col text-center">
                                <img src="/assets/user.png" class="img-fluid rounded-top customImg" alt="" />
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col mb-2 text-center">
                                <h3 class="cardTitle">Modificar Mascota</h3>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-auto">
                                @using (Html.BeginForm("accionesEjecucion", "Mascotas", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.TN_IdMascota)

                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.TC_NombreMascota, htmlAttributes: new { @class = "form-label lblCustom" })
                                        @Html.EditorFor(model => model.TC_NombreMascota, new { htmlAttributes = new { @class = "form-control inpCustom py-lg-2 w-100" } })
                                        @Html.ValidationMessageFor(model => model.TC_NombreMascota, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.TN_IdCliente, htmlAttributes: new { @class = "form-label lblCustom" })
                                        @Html.DropDownListFor(model => model.TN_IdCliente, Model.Clientes, "Seleccione un cliente", new { @class = "form-control inpCustom py-lg-2 w-100" })
                                        @Html.ValidationMessageFor(model => model.TN_IdCliente, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="mb-3">
                                        <div class="text-center">
                                            <button type="submit" name="accionEjecutar" value="Modificar" class="btn btn-primary w-75 btnAgregar" formaction="@Url.Action("accionesEjecucion", "Mascotas")">
                                                Guardar
                                            </button>
                                        </div>
                                    </div>
                                }
                                <div class="mb-3">
                                    <div class="text-center">
                                        <a href="@Url.Action("obtenerMascotasENT")" class="btn btn-primary w-50 btnCancelar">Cancelar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}